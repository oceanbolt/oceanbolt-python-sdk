[run]
branch = True

[report]
fail_under = 100
show_missing = True
omit =
    oceanbolt/com/drydock/__init__.py
    oceanbolt/com/tonnage/__init__.py
    oceanbolt/com/tradeflows/__init__.py
    oceanbolt/com/congestion/__init__.py
    oceanbolt/com/portcalls/__init__.py
    oceanbolt/com/entities/__init__.py
    oceanbolt/com/fleetmanagement/__init__.py
    oceanbolt/com/polygonmanagement/__init__.py
    oceanbolt/com/distancecalculator/__init__.py

exclude_lines =
    # Re-enable the standard pragma
    pragma: NO COVER
    # Ignore debug-only repr
    def __repr__
    # Ignore pkg_resources exceptions.
    # This is added at the module level as a safeguard for if someone
    # generates the code and tries to run it without pip installing. This
    # makes it virtually impossible to test properly.
    except pkg_resources.DistributionNotFound
